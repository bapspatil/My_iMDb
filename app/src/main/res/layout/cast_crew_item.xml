<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <ImageView
        android:id="@+id/cast_crew_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/cast_crew_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/cast_crew_image"
        android:layout_alignStart="@id/cast_crew_image"
        android:layout_below="@id/cast_crew_image"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Bradley Cooper"
        android:textSize="12sp" />

</RelativeLayout>